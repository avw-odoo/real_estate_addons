        <template id="listing">
              <t t-call="website.layout">
                  <t t-set="title">Properties</t>
                  <div class="container my-5">
                      <h1 class="text-center mb-4" style="font-size: 2.5em;">Properties</h1>
                      <div class="row">
                          <t t-foreach="properties" t-as="object">
                              <!-- Bootstrap's grid system -->
                              <div class="col-12 col-sm-6 col-md-4 col-xl-3 mb-4">
                                  <div class="card h-100">
                                      <!-- Image -->
                                      <img class="card-img-top" t-att-src="object.property_image and '/web/image?model=real_estate.property&amp;id=' + str(object.id) + '&amp;field=property_image' or '/path/to/default-image.jpg'" alt="Property Image"/>
                                      <!-- Body -->
                                      <div class="card-body">
                                        <h6 class="card-title text-muted" t-esc="object.subtype_id.name"/>
                                        <h5 class="card-price">
                                            <t t-if="object.make_offer">
                                                From
                                            </t>
                                            <t t-esc="object.price" t-options='{"widget": "float", "precision": 0}'/><t t-esc="object.company_currency_id.symbol"/>
                                        </h5>
                                        <small class="card-features">
                                            <t t-if="object.bedroom">
                                                <div class="feature-item">
                                                    <img src="/real_estate_property_website/static/img/bed.svg" alt="Bedrooms" class="icon-small"/>
                                                    <span><t t-esc="object.bedroom"/> Bedrooms</span>
                                                </div>
                                            </t>
                                            <t t-if="object.livable_area">
                                                <div class="feature-item">
                                                    <img src="/real_estate_property_website/static/img/area.svg" alt="Area" class="icon-small"/>
                                                    <span><t t-esc="object.livable_area"/> m²</span>
                                                </div>
                                            </t>
                                            <t t-if="object.city">
                                                <div class="feature-item">
                                                    <img src="/real_estate_property_website/static/img/location.svg" alt="Location" class="icon-small"/>
                                                    <span t-esc="object.city"/>
                                                </div>
                                            </t>
                                        </small>


                                      </div>
                                  </div>
                              </div>
                          </t>
                      </div>
                  </div>
              </t>
          </template>





        <template id="property" name="Property Detail">
          <t t-call="website.layout">
              <div id="wrap" class="oe_structure oe_empty">
                  <div class="container">
                      <!-- Property Header -->
                      <div class="row mt-5">
                          <div class="col-12">
                              <h1 t-field="property.name" class="text-center" style="font-size: 2.5em;"/>
                          </div>
                      </div>

                      <!-- Property Image -->
                      <div class="row">
                        <div class="col-12 text-center">
                          <span t-field="property.property_image" t-options='{"widget": "image", "class": "img-fluid"}'/>
                        </div>
                      </div>

                      <!-- Property Details -->
                      <div class="row mt-4">
                          <div class="col-md-6">
                              <h3>Property Details</h3>
                              <p t-field="property.description"/>
                              <ul class="list-unstyled">
                                  <li><strong>Address:</strong> <span t-field="property.street"/></li>
                                  <!-- Add more property details here -->
                              </ul>
                          </div>
                          <div class="col-md-6">
                              <!-- Add more sections or information here -->
                          </div>
                      </div>

                      <!-- Additional Information -->
                      <div class="row mt-4">
                          <div class="col-12">
                              <h3>Additional Information</h3>
                              <p>Here you can add more information about the property, like amenities, neighborhood, etc.</p>
                          </div>
                      </div>
                  </div>
              </div>
          </t>
      </template>
    </data>
</odoo>